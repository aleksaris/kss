<h2 class="page-header">Pretrazi knjige</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Naziv</label>
            <input type="text" name="title" value="<%= searchOptions.title %>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label>Objavljena nakon</label>
            <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
        </div>
        <div class="form-item">
            <label>Objavljena pre</label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Pretrazi</button>
    </div>
</form>
<div>
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
            <img height="250" width="175" src="<%= book.coverImagePath %>">
        </a>
    <% }) %>
</div>